{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "globals": {
    "$": true
  },
  "rules": {
    "no-console": 1,
    "curly": 2,
    "default-case": 1,
    "eqeqeq": 2,
    "arrow-body-style": 2,
    "arrow-spacing": [1, { "before": true, "after": true }],
    "no-trailing-spaces": 1,
    "space-before-blocks": 1,
    "quotes": [2, "single", {"allowTemplateLiterals": true, "avoidEscape": true}]
  }
}
